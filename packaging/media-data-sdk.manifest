<manifest>
 <request>
    <!-- -->
    <!-- It is highly unusual to specify a domain for the entire package -->
    <!-- This package supplies nothing but data, all of which should be -->
    <!-- in the User domain. -->
    <!-- -->
    <domain name="User"/>
 </request>
 <assign>
    <filesystem path="/opt/usr/dbspace/.media.db*" label="System" />
 </assign>
</manifest>
